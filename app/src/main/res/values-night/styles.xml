<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Night mode typography styles -->
    <style name="WordTextStyle">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="DefinitionTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="SectionTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="ExampleTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
</resources>